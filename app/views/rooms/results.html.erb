<div class="results-screen">
  <h1>ゲーム結果</h1>

  <div class="game-summary">
    <p>ルームID: <%= @cache_room.id %></p>
    <p>参加人数: <%= @cache_room.entering_count %>人</p>
    <p>ラウンド数: <%= @cache_room.total_round %></p>
  </div>

  <div class="sketch-books-results">
    <% @sketch_books.each_with_index do |sketch_book, index| %>
      <div class="sketch-book" id="sketch-book-<%= index %>">
        <h2>スケッチブック #<%= index + 1 %> - <%= sketch_book.owner_name %>さんのお題</h2>

        <div class="pages-container">
          <% sketch_book.pages.ordered.each do |page| %>
            <div class="page">
              <div class="page-header">
                <span class="page-number">ページ <%= page.page_number %></span>
                <span class="page-author">作成者: <%= page.user_name %></span>
              </div>

              <div class="page-content">
                <% if page.prompt? %>
                  <div class="prompt-page">
                    <h3>お題</h3>
                    <p class="prompt-text"><%= page.content %></p>
                  </div>
                <% elsif page.sketch? %>
                  <div class="sketch-page">
                    <%= image_tag page.image, alt: "#{page.user_name}さんの絵" %>
                  </div>
                <% elsif page.text? %>
                  <div class="text-page">
                    <p class="text-answer"><%= page.content %></p>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="comparison">
          <h3>お題と最終回答の比較</h3>
          <div class="comparison-container">
            <div class="original-prompt">
              <h4>元のお題</h4>
              <p><%= sketch_book.pages.first.content %></p>
            </div>
            <div class="final-answer">
              <h4>最終回答</h4>
              <p><%= sketch_book.pages.last.content %></p>
            </div>
          </div>

          <% if sketch_book.pages.first.content == sketch_book.pages.last.content %>
            <p class="match-result success">✓ 一致しました！</p>
          <% else %>
            <p class="match-result fail">✗ 一致しませんでした</p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= link_to "トップに戻る", root_path, class: "btn" %>
  </div>
</div>

<style>
  .results-screen {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
  }

  .game-summary {
    background: #f5f5f5;
    padding: 20px;
    border-radius: 8px;
    margin-bottom: 30px;
  }

  .sketch-book {
    margin-bottom: 50px;
    padding: 20px;
    border: 2px solid #ddd;
    border-radius: 8px;
    background: white;
  }

  .sketch-book h2 {
    color: #333;
    margin-bottom: 20px;
  }

  .pages-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
    margin-bottom: 30px;
  }

  .page {
    border: 1px solid #ccc;
    border-radius: 4px;
    padding: 15px;
    background: #fafafa;
  }

  .page-header {
    display: flex;
    justify-content: space-between;
    margin-bottom: 10px;
    font-size: 14px;
    color: #666;
  }

  .page-content {
    min-height: 200px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .prompt-page,
  .text-page {
    text-align: center;
    width: 100%;
  }

  .prompt-text,
  .text-answer {
    font-size: 24px;
    font-weight: bold;
    color: #333;
  }

  .sketch-page {
    width: 100%;
  }

  .sketch-page img {
    max-width: 100%;
    height: auto;
    border: 1px solid #ddd;
  }

  .comparison {
    background: #f9f9f9;
    padding: 20px;
    border-radius: 8px;
    margin-top: 20px;
  }

  .comparison-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin: 20px 0;
  }

  .original-prompt,
  .final-answer {
    padding: 15px;
    background: white;
    border-radius: 4px;
    text-align: center;
  }

  .original-prompt h4,
  .final-answer h4 {
    margin-bottom: 10px;
    color: #666;
  }

  .original-prompt p,
  .final-answer p {
    font-size: 20px;
    font-weight: bold;
    color: #333;
  }

  .match-result {
    font-size: 24px;
    font-weight: bold;
    text-align: center;
    padding: 15px;
    border-radius: 4px;
  }

  .match-result.success {
    background: #d4edda;
    color: #155724;
  }

  .match-result.fail {
    background: #f8d7da;
    color: #721c24;
  }

  .actions {
    text-align: center;
    margin-top: 40px;
  }

  .btn {
    display: inline-block;
    padding: 15px 40px;
    background: #007bff;
    color: white;
    text-decoration: none;
    border-radius: 4px;
    font-size: 18px;
  }

  .btn:hover {
    background: #0056b3;
  }
</style>