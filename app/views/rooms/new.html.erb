<div class="room-creation-page">
  <h1 class="page-title">新しいゲームを作成</h1>

  <%= form_with model: @cache_room, url: rooms_path, class: "room-form" do |form| %>
    <div class="form-group">
      <%= form.label :member_limit, '何人で遊びますか？', class: 'form-label' %>
      <div class="range-container">
        <%= form.range_field :member_limit, in: 4..8, oninput: "this.form.member_limit_result.value = this.value", class: 'range-slider' %>
        <div class="range-output">
          <output name="member_limit_result" for="cache_room_member_limit"><%= @cache_room.member_limit %></output>
          <span class="unit">人</span>
        </div>
      </div>
      <div class="range-labels">
        <span>4人</span>
        <span>8人</span>
      </div>
    </div>

    <div class="form-actions">
      <%= form.submit 'ゲームを作成', class: 'submit-btn' %>
      <%= link_to 'TOPに戻る', root_path, class: 'back-btn' %>
    </div>
  <% end %>
</div>

<style>
  .room-creation-page {
    max-width: 600px;
    margin: 60px auto;
    padding: 40px;
    background: linear-gradient(135deg, #FFF9E6 0%, #FFE4B5 100%);
    border-radius: 20px;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    border: 3px solid #D4A574;
  }

  .page-title {
    text-align: center;
    font-size: 36px;
    color: #FF6B6B;
    margin-bottom: 40px;
    font-family: 'Comic Sans MS', 'Chalkboard SE', cursive, sans-serif;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  }

  .room-form {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 15px;
  }

  .form-label {
    font-size: 20px;
    font-weight: bold;
    color: #2C1810;
    text-align: center;
    font-family: 'Comic Sans MS', 'Chalkboard SE', cursive, sans-serif;
  }

  .range-container {
    background: white;
    padding: 30px 20px;
    border-radius: 15px;
    border: 2px solid #D4A574;
  }

  .range-slider {
    width: 100%;
    height: 8px;
    -webkit-appearance: none;
    appearance: none;
    background: linear-gradient(90deg, #4ECDC4 0%, #FF6B6B 100%);
    border-radius: 5px;
    outline: none;
    margin-bottom: 20px;
  }

  .range-slider::-webkit-slider-thumb {
    -webkit-appearance: none;
    appearance: none;
    width: 24px;
    height: 24px;
    background: white;
    border: 3px solid #FF6B6B;
    border-radius: 50%;
    cursor: pointer;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
  }

  .range-slider::-moz-range-thumb {
    width: 24px;
    height: 24px;
    background: white;
    border: 3px solid #FF6B6B;
    border-radius: 50%;
    cursor: pointer;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.2);
  }

  .range-output {
    text-align: center;
    font-size: 48px;
    font-weight: bold;
    color: #FF6B6B;
    font-family: 'Comic Sans MS', 'Chalkboard SE', cursive, sans-serif;
  }

  .unit {
    font-size: 32px;
    color: #666;
    margin-left: 5px;
  }

  .range-labels {
    display: flex;
    justify-content: space-between;
    padding: 0 10px;
    color: #666;
    font-size: 14px;
  }

  .form-actions {
    display: flex;
    flex-direction: column;
    gap: 15px;
    margin-top: 20px;
  }

  .submit-btn {
    padding: 20px 40px;
    font-size: 24px;
    font-weight: bold;
    background: linear-gradient(145deg, #FF6B6B, #FF4757);
    color: white;
    border: none;
    border-radius: 30px;
    cursor: pointer;
    box-shadow: 0 4px 12px rgba(255, 107, 107, 0.4);
    transition: all 0.3s ease;
    font-family: 'Comic Sans MS', 'Chalkboard SE', cursive, sans-serif;
  }

  .submit-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(255, 107, 107, 0.5);
  }

  .back-btn {
    display: block;
    text-align: center;
    padding: 12px 30px;
    background: #4ECDC4;
    color: white;
    text-decoration: none;
    border-radius: 20px;
    font-size: 16px;
    transition: all 0.3s ease;
    font-family: 'Chalkboard SE', 'Comic Sans MS', cursive, sans-serif;
  }

  .back-btn:hover {
    background: #44A08D;
    transform: translateY(-2px);
  }

  /* レスポンシブ対応 */
  @media (max-width: 768px) {
    .room-creation-page {
      margin: 30px 20px;
      padding: 30px 20px;
    }

    .page-title {
      font-size: 28px;
    }

    .form-label {
      font-size: 18px;
    }

    .range-output {
      font-size: 36px;
    }

    .unit {
      font-size: 24px;
    }

    .submit-btn {
      padding: 18px 30px;
      font-size: 20px;
    }
  }

  @media (max-width: 480px) {
    .room-creation-page {
      margin: 20px 15px;
      padding: 25px 15px;
    }

    .page-title {
      font-size: 24px;
    }

    .form-label {
      font-size: 16px;
    }

    .range-container {
      padding: 20px 15px;
    }

    .range-output {
      font-size: 32px;
    }

    .unit {
      font-size: 20px;
    }

    .submit-btn {
      padding: 15px 25px;
      font-size: 18px;
    }

    .back-btn {
      padding: 10px 20px;
      font-size: 14px;
    }
  }
</style>
